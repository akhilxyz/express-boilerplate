{
    "name": "clean-architecture-nodejs",
    "version": "1.0.0",
    "description": "Node.js Clean Architecture Application",
    "author": "akhil choudhary",
    "main": "dist/server.js",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "typeorm": "typeorm-ts-node-commonjs",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
        "migration:generate": "npm run typeorm migration:generate",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert"
    },
    "dependencies": {
        "@sendgrid/mail": "^8.1.4",
        "@types/express": "^4.17.21",
        "bcrypt": "^5.1.1",
        "bull": "^4.16.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.1",
        "helmet": "^8.0.0",
        "http-errors": "^2.0.0",
        "inversify": "^6.2.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.12.0",
        "path": "^0.12.7",
        "pg": "^8.11.3",
        "redis": "^4.7.0",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsconfig-paths": "^4.2.0",
        "tsyringe": "^4.8.0",
        "typeorm": "^0.3.17",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express-session": "^1.18.1",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^20.17.14",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.57.1",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/akhilxyz/express-boilerplate.git"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    }
}
